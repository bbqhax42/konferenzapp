<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#52b9b6" />
            <gradient android:angle="-90" android:startColor="#63c0bd" android:endColor="#cbeae9"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#63c0bd" />
            <solid android:color="#63c0bd"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#52b9b6" />
            <gradient android:angle="-90" android:startColor="#63c0bd" android:endColor="#cbeae9" />
        </shape>
    </item>
</selector>