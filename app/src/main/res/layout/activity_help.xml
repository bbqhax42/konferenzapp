<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/titlebar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="500dp"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:src="@drawable/help_mainmenuu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Dies ist das Start Menu. Wenn Sie auf zum Beispiel auf Hundetraining drücken, kommen sie zur Veranstaltung Hundetraining. Dort erhalten sie mehr Informationen über diese Veranstaltung." />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="500dp"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:src="@drawable/help_eventfiledownload" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Hier sehen Sie die Veranstaltung Hundetraining. Sie können hier mehr Details zu dieser Veranstaltung finden. Wenn sie auf mehr Details drücken finden Sie unter anderem den Ort, die Uhrzeit, zusätzliche Rauminformationen oder die Website. Sie können hier diverse Dateien zum Herunterladen auswählen und sich diese an Ihre hinterlegte E-Mailadresse schicken lassen. " />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="500dp"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:src="@drawable/help_channeloverview" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Hier sehen Sie Ihre persönliche Chatliste. In dieser Liste sind Ihre Chats basierend auf Ihreren Interessensgebieten, sowie private Chats mit anderen anwesenden Personen." />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="500dp"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:src="@drawable/help_publicchat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Hier sehen sie den Chatchannel zum Thema Hund. In diesem Channel können Sie mit allen anderen Personen zu diesem Thema Diskussionen durchführen. Wenn Sie auf den Namen von anderen Personen drücken kommen Sie auf das Profil dieser Person. Falls das Senden Ihrer Nachricht fehlschlagen sollte können Sie einfach auf das rote Senden fehlgeschlagen klicken um die Nachricht erneut zu senden. Alle Nachrichten werden beim Neustart des Programms gelöscht." />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="500dp"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:src="@drawable/help_userprofile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Hier sehen Sie das Profil von Max Mustermann. Sie können hier einen privaten Chat mit Max Mustermann beginnen. Wenn Sie der App die Berechtigungen geben Kontakte hinzuzufügen, können Sie Max per Knopfdruck in Ihre Kontaktliste hinzufügen. Falls Sie nicht möchten das Max sie kontaktieren kann können Sie Ihn auch einfach blockieren." />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="500dp"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:src="@drawable/help_privatechat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="So könnte Ihr persönlicher Chat mit Max Mustermann aussehen. Wenn Sie auf seinen Namen im Titel drücken kommen Sie zu Max Mustermanns Profil. Nachrichten die hier gesendet werden sind ausschließlich für Sie und Max Mustermann einsehbar. Der Nachrichtenverlauf wird beim Neustarten des Programms gelöscht." />


        </LinearLayout>

        <TextView
            android:id="@+id/impressum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="textMultiLine|textNoSuggestions|none"
            android:text="Impressum"
            android:textSize="15dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/adress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:autoLink="map"
            android:ems="10"
            android:gravity="center"
            android:inputType="textMultiLine|textNoSuggestions|none"
            android:text="Check Config.impressum" />


        <TextView
            android:id="@+id/contactdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:autoLink="email|phone"
            android:ems="10"
            android:gravity="center"
            android:inputType="textMultiLine|textNoSuggestions|none"
            android:text="Check Config.impressum" />


    </LinearLayout>
</ScrollView>